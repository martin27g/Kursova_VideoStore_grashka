@page
@model Kursova_VideoStore.Pages.Films.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Stock)
        </dd>

        <!-- Rentals section goes here -->
        <dt class="col-sm-2">
            Rentals
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Order Date</th>
                    <th>Customer</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var detail in Model.Film.OrderDetails)
                {
                    <tr>
                        <td>@detail.Order?.OrderDate.ToShortDateString()</td>
                        <td>@detail.Order?.Customer?.FirstName @detail.Order?.Customer?.LastName</td>
                        <td>@detail.Quantity</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Film.FilmID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
