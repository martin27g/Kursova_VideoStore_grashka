@page
@model Kursova_VideoStore.Pages.OrderDetails.CreateModel

<h2>Create Order Detail</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="OrderDetail.OrderID" class="control-label"></label>
        <select asp-for="OrderDetail.OrderID" class="form-control"
                asp-items="ViewBag.OrderID"></select>
        <span asp-validation-for="OrderDetail.OrderID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderDetail.FilmID" class="control-label"></label>
        <select asp-for="OrderDetail.FilmID" class="form-control"
                asp-items="ViewBag.FilmID"></select>
        <span asp-validation-for="OrderDetail.FilmID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderDetail.Quantity" class="control-label"></label>
        <input asp-for="OrderDetail.Quantity" class="form-control" />
        <span asp-validation-for="OrderDetail.Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
