@model Videoteka.Models.OrderDetail

@{
    ViewData["Title"] = "Delete Rental";
}

<h1>Delete Rental</h1>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <h4>Rental Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderID)
        </dd>

        <dt class="col-sm-2">
            Film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.ReturnDate.HasValue ? "Returned" : "Active Rental")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderDetailID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>