@using Videoteka.Models
@using Kursova_VideoStore.Data
@model PaginatedList<OrderDetail>

@{
    ViewData["Title"] = "Rentals";
}

<h1>Current Rentals</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Rental Item</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color mb-3">
        <p>
            Find by Film or Order ID:
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-outline-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["OrderSortParm"]">Order ID</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["FilmSortParm"]">Film</a></th>
            <th>Qty</th>
            <th>Due Date</th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">Status</a></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // Logic for Row Color: Red if overdue, Green if returned
            string rowClass = "";
            string statusText = "Active";

            if (item.ReturnDate != null)
            {
                rowClass = "table-success"; // Green
                statusText = "Returned: " + item.ReturnDate.Value.ToShortDateString();
            }
            else if (item.DueDate < DateTime.Now)
            {
                rowClass = "table-danger"; // Red
                statusText = "OVERDUE";
            }

            <tr class="@rowClass">
                <td>@Html.DisplayFor(modelItem => item.Order.OrderID)</td>
                <td>@Html.DisplayFor(modelItem => item.Film.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@item.DueDate.ToShortDateString()</td>
                <td>
                    <strong>@statusText</strong>

                    @if (item.ReturnDate == null)
                    {
                        <form asp-action="ReturnFilm" asp-route-id="@item.OrderDetailID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-success">Return</button>
                        </form>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderDetailID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderDetailID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-secondary @prevDisabled">Previous</a>
<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-secondary @nextDisabled">Next</a>