@model Videoteka.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
    </dl>
</div>

<div>
    <h4 class="fw-bold text-center text-bg-info ">Rented Movies </h4>
    <table class="table">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genre</th>
                <th>Copies</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OrderDetails != null)
            {
                foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Film.Title</td>
                        <td>@item.Film.Genre</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>